#!/bin/bash

# Update and upgrade the system
sudo apt-get update
sudo apt-get upgrade

# Install Python 3 and pip
sudo apt-get install python3 python3-pip

# Install numpy for numerical computing
pip3 install numpy

# Install pandas for data processing and analysis
pip3 install pandas

# Install matplotlib for data visualization
pip3 install matplotlib

# Install scikit-learn for machine learning algorithms
pip3 install scikit-learn

# Install TensorFlow for deep learning
pip3 install tensorflow

# Install Keras for building neural networks
pip3 install keras

# Install Jupyter Notebook for interactive coding and visualization
pip3 install jupyter

# Install OpenCV for computer vision
pip3 install opencv-python

# Install NLTK for natural language processing
pip3 install nltk

# Install spaCy for advanced natural language processing
pip3 install spacy

# Download spaCy's English language model
python3 -m spacy download en_core_web_sm

# Install PyTorch for deep learning
pip3 install torch torchvision

# Install Gensim for topic modeling
pip3 install gensim

# Install XGBoost for gradient boosting
pip3 install xgboost

echo "Environment setup complete."
